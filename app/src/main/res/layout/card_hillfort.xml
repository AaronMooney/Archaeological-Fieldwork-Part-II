<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:elevation="24dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="16dp">

        <ImageView
                android:id="@+id/imageIcon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="16dp"/>

        <TextView
                android:id="@+id/hillfortName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageIcon"
                android:textSize="18sp"/>

        <TextView
                android:id="@+id/description"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/hillfortName"
                android:layout_toEndOf="@+id/imageIcon"/>

        <CheckBox
                android:id="@+id/checkBoxVisited"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hillfortName"
                android:layout_toEndOf="@+id/description"
                android:text="@string/checkbox_visited"/>

        <TextView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/checkBoxVisited"
                android:layout_toEndOf="@+id/description" android:layout_marginTop="1dp"
                android:layout_marginStart="32dp"/>

        <ImageView
                android:id="@+id/item_favorite"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:title="@string/menu_favorite"
                android:layout_alignParentEnd="true" android:layout_marginEnd="12dp"
                android:layout_alignParentBottom="true" android:layout_marginBottom="9dp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>